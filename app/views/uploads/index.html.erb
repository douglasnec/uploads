<h1>Uploads</h1>

<%- if @uploads.present? -%>
<table>
  <tr>
    <th>Title</th>
    <th>Link</th>
    <th></th>
    <th></th>
  </tr>

<% @uploads.each do |upload| %>
  <tr>
    <td><%= upload.title %></td>
    <td><%= link_to "Abrir", upload.document.url() %></td>
    <td><%= link_to 'Convert to Image', upload_convert_path(upload) %></td>
    <td><%= link_to 'Destroy', upload, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%- end -%>
<br />

<%= link_to 'New Upload', new_upload_path %>
